{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@yukie-core/*": ["packages/yukie-core/src/*"],
      "@shared/protocol": ["packages/shared/protocol/src/types"],
      "@shared/auth": ["packages/shared/auth/src/auth"],
      "@shared/observability": ["packages/shared/observability/src/logger"],
      "@shared/mcp-server": ["packages/shared/mcp-server/src/index"],
      "@shared/mcp-client": ["packages/shared/mcp-client/src/index"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "apps"
  ]
}
