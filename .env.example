# ============================================================================
# Yukie MVP Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# LLM Configuration
# Provider: 'anthropic' or 'openai'
LLM_PROVIDER=anthropic

# API Key for the chosen provider
LLM_API_KEY=sk-...

# Model to use (optional, defaults shown)
# Anthropic: claude-3-5-sonnet-20241022
# OpenAI: gpt-4-turbo
LLM_MODEL=claude-3-5-sonnet-20241022

# Authentication
# Secret key for JWT signing (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Service URLs (for development)
HABIT_TRACKER_URL=http://localhost:3001

# Server Configuration
PORT=3000
LOG_LEVEL=info

# ============================================================================
# Optional: Turso Database (for production persistence)
# ============================================================================
# TURSO_DATABASE_URL=libsql://your-database.turso.io
# TURSO_AUTH_TOKEN=your-auth-token

# ============================================================================
# Optional: Cloudinary (for habit tracker image uploads)
# ============================================================================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
